---
import Cards from "./Cards.astro"

---
<!--cards-->
<div id="proyectos" class="relative mx-4 sm:mx-6 md:mx-10 mt-16 sm:mt-20 md:mt-25 p-4 sm:p-6 md:p-10 border border-white/20 rounded-2xl sm:rounded-3xl md:rounded-4xl overflow-hidden z-10">

    <!-- Halo animado solo en el borde -->
    <div class="pointer-events-none absolute inset-0 rounded-t-2xl sm:rounded-t-3xl md:rounded-t-4xl z-0"
         style="
           background: linear-gradient(90deg, 
             transparent 0%, 
             transparent 0%, 
             #20202077 50%, 
             transparent 100%, 
             transparent 100%
           );
           background-size: 200% 100%;
           animation: borderShine 3s linear infinite;
           -webkit-mask: 
             linear-gradient(#000 0 0) content-box, 
             linear-gradient(#000 0 0);
           -webkit-mask-composite: xor;
           mask-composite: exclude;
           padding: 2px;
         ">
    </div>
  
    <!-- Contenido real -->
    <div class="relative z-10">
      <strong class="flex justify-center text-2xl sm:text-3xl text-white font-bold mb-1">
        Proyectos
      </strong>
  
      <!-- LÃ­nea decorativa -->
      <div class="flex justify-center mb-6 sm:mb-8 md:mb-10">
        <div class="h-[2px] w-24 sm:w-28 md:w-32 bg-white/60 rounded-full"></div>
      </div>
  
      <section
        id="muestra"
        class="mt-6 sm:mt-8 md:mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 sm:gap-6 md:gap-8"
      >
        <Cards
          image="https://framerusercontent.com/assets/z0uwRhQMdFZ3TgjIX7bI3JrX3w.mp4"
          role="Content Creator"
          name="ByMaximise"
          description="Creador de contenido para Instagram"
        />
        <Cards
          image="https://framerusercontent.com/assets/OVSUFQrhxAAScwi4lqvfZAVuNlY.mp4"
          role="Podcaster"
          name="Empresarios Con Impacto"
          description="Podcast de emprendedores"
        />
        <Cards
          image="https://framerusercontent.com/assets/yXEAknbluvjJnUsgL5YKR6W0AQ.mp4"
          role="Video Editor"
          name="Baltasca"
          description="Editor de videos profesional"
        />
        <Cards
          image="https://framerusercontent.com/assets/NZgak3Xoj2fCputAcgCelilzX4.mp4"
          role="YouTuber"
          name="Adrian Saenz"
          description="Emprendedor y creador de contenido para YouTube"
        />
      </section>
    </div>
  </div>
  
<style>
  #proyectos {
    background-color: #000000d5;
    margin-bottom: 100px;
  }

  @media (min-width: 640px) {
    #proyectos {
      margin-bottom: 120px;
    }
  }

  @media (min-width: 1024px) {
    #proyectos {
      margin-bottom: 150px;
    }
  }

  @keyframes borderShine {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }
</style> 