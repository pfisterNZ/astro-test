---
// Cards.astro
export interface Props {
  href: string
  image: string
  role: string
  name: string
  description: string
}

const { href, image, role, name, description } = Astro.props
---

<a href={href} class="group relative block bg-black rounded-2xl overflow-hidden aspect-[9/16] w-full max-w-xs mx-auto">
  <video
    autoplay
    loop
    muted
    playsinline
    class="absolute inset-0 h-full w-full object-cover opacity-75 transition-opacity group-hover:opacity-50"
  >
    <source src={image} type="video/mp4" />
  </video>

  <div class="relative p-4 sm:p-5 lg:p-8 z-10">
    <p class="text-sm font-medium tracking-widest text-pink-500 uppercase">{role}</p>

    <p class="text-xl font-bold text-white sm:text-2xl">{name}</p>

    <div class="mt-32 sm:mt-48 lg:mt-64">
      <div
        class="translate-y-8 transform opacity-0 transition-all group-hover:translate-y-0 group-hover:opacity-100"
      >
        <p class="text-sm text-white">
          {description}
        </p>
      </div>
    </div>
  </div>
</a>
